{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "peopleDS": {
    "name": "peopleDS",
    "connector": "rest",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://localhost:3001/api/people/getName?dni={dni}",
          "form": {
            "dni": "{dni}"
          }
        },
        "functions": {
          "getName": [
            "dni"
          ]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://localhost:3001/api/people",
          "form": {
            "dni": "{dni}",
            "name": "{name}"
          }
        },
        "functions": {
          "new": [
            "dni",
            "name"
          ]
        }
      }
    ]
  }
}
